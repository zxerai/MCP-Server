    "@types/pg": "^8.15.2",
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^12.0.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "i18next-fs-backend": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "openai": "^4.103.0",
    "openapi-types": "^12.1.3",
    "pg": "^8.16.0",
    "pgvector": "^0.2.1",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0"
  },
