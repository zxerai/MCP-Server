# MCP Server v1.0.0 环境变量配置模板
# 复制此文件为 .env 并根据需要修改

# ================================
# 基础配置
# ================================
NODE_ENV=production
TZ=Asia/Shanghai

# ================================
# 应用配置
# ================================
MCPSERVER_PORT=3000
BASE_PATH=
READONLY=false
REQUEST_TIMEOUT=60000

# ================================
# 代理配置
# ================================
HTTP_PROXY=
HTTPS_PROXY=
NPM_REGISTRY=https://registry.npmjs.org/

# ================================
# Nginx 配置
# ================================
NGINX_PORT=80
NGINX_SSL_PORT=443
SSL_CERT_DIR=./ssl

# ================================
# Redis 配置
# ================================
REDIS_PORT=6379
REDIS_PASSWORD=mcpserver123

# ================================
# PostgreSQL 配置
# ================================
POSTGRES_PORT=5432
POSTGRES_DB=mcpserver
POSTGRES_USER=mcpserver
POSTGRES_PASSWORD=mcpserver123

# ================================
# 监控配置
# ================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin123

# ================================
# 开发环境配置
# ================================
FRONTEND_PORT=5173
DEBUG_PORT=9229
DEBUG=false

# 开发环境数据库
POSTGRES_DEV_PORT=5433
POSTGRES_DEV_DB=mcpserver_dev
POSTGRES_DEV_USER=mcpserver_dev
POSTGRES_DEV_PASSWORD=mcpserver_dev123

# 开发环境Redis
REDIS_DEV_PORT=6380
REDIS_DEV_PASSWORD=mcpserver_dev123

# 开发环境监控
PROMETHEUS_DEV_PORT=9091

# ================================
# 扩展配置
# ================================
INSTALL_EXT=false
CONFIG_DIR=./config

# ================================
# 日志配置
# ================================
LOG_LEVEL=info
LOG_FORMAT=json

# ================================
# 安全配置
# ================================
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# ================================
# 性能配置
# ================================
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000
MAX_HEADERS_COUNT=2000

# ================================
# 缓存配置
# ================================
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ================================
# 限流配置
# ================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# 健康检查配置
# ================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3
